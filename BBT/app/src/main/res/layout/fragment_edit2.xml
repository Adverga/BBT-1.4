<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.EditFragment2">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ProgressBar
            android:id="@+id/progressBarAe"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageUploade" />

        <TextView
            android:id="@+id/txtLangkahe"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Langkah :"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/progressBarAe" />

        <Button
            android:id="@+id/btnUploadLangkahe"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/btn_p"
            android:text="Upload"
            app:layout_constraintBottom_toBottomOf="@+id/txtLangkahe"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txtLangkahe" />

        <ImageView
            android:id="@+id/imgUploadLangkahe"
            android:layout_width="0dp"
            android:layout_height="128dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/btn_p"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtLangkahe" />

        <EditText
            android:id="@+id/editLangkahe"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/btn_p"
            android:inputType="text"
            android:paddingLeft="3dp"
            app:layout_constraintEnd_toStartOf="@+id/addLangkahe"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgUploadLangkahe" />

        <TextView
            android:id="@+id/addLangkahe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:background="@drawable/btn_p"
            android:paddingHorizontal="13dp"
            android:text="+"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/editLangkahe"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/editLangkahe" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvLangkahe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="6dp"
            android:maxHeight="256dp"
            app:layout_constraintTop_toBottomOf="@+id/editLangkahe"
            tools:layout_editor_absoluteX="8dp" />

        <TextView
            android:id="@+id/txtInfoe"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Info :"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rvLangkahe" />
        <EditText
            android:id="@+id/editInfoe"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:paddingLeft="3dp"
            android:background="@drawable/btn_p"
            android:inputType="text"
            app:layout_constraintBottom_toBottomOf="@+id/txtInfoe"
            app:layout_constraintEnd_toStartOf="@+id/addInfoe"
            app:layout_constraintStart_toEndOf="@+id/txtInfoe"
            app:layout_constraintTop_toTopOf="@+id/txtInfoe" />
        <TextView
            android:id="@+id/addInfoe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:background="@drawable/btn_p"
            android:text="+"
            android:textColor="#000000"
            android:textSize="20sp"
            android:paddingHorizontal="13dp"
            app:layout_constraintBottom_toBottomOf="@+id/editInfoe"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/editInfoe" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvInfoe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="256dp"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtInfoe" />

        <Button
            android:id="@+id/btnSimpane"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/btn_p"
            android:text="Simpan"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rvInfoe" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>