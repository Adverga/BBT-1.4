<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageUploade"
            android:layout_width="0dp"
            android:layout_height="192dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_p"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnUploade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/btn_p"
            android:elevation="5dp"
            android:padding="2dp"
            android:text="Upload"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageUploade" />

        <TextView
            android:id="@+id/txtJudule"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Judul :"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnUploade" />

        <EditText
            android:id="@+id/editJudule"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/btn_p"
            android:inputType="text"
            android:paddingLeft="3dp"
            app:layout_constraintBottom_toBottomOf="@+id/txtJudule"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txtJudule"
            app:layout_constraintTop_toTopOf="@+id/txtJudule" />

        <TextView
            android:id="@+id/txtAlate"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="Alat :"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editJudule" />

        <EditText
            android:id="@+id/editAlate"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/btn_p"
            android:inputType="text"
            android:paddingLeft="3dp"
            app:layout_constraintBottom_toBottomOf="@+id/txtAlate"
            app:layout_constraintEnd_toStartOf="@+id/addAlate"
            app:layout_constraintStart_toEndOf="@+id/txtAlate"
            app:layout_constraintTop_toTopOf="@+id/txtAlate" />

        <TextView
            android:id="@+id/addAlate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:background="@drawable/btn_p"
            android:paddingHorizontal="13dp"
            android:text="+"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/editAlate"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/editAlate" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvAlate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="8dp"
            android:maxHeight="256dp"
            app:layout_constraintTop_toBottomOf="@+id/editAlate" />

        <TextView
            android:id="@+id/txtBahane"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Bahan :"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rvAlate" />

        <EditText
            android:id="@+id/editBahane"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/btn_p"
            android:inputType="text"
            android:paddingLeft="3dp"
            app:layout_constraintBottom_toBottomOf="@+id/txtBahane"
            app:layout_constraintEnd_toStartOf="@+id/addBahane"
            app:layout_constraintStart_toEndOf="@+id/txtBahane"
            app:layout_constraintTop_toTopOf="@+id/txtBahane" />

        <TextView
            android:id="@+id/addBahane"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:background="@drawable/btn_p"
            android:paddingHorizontal="13dp"
            android:text="+"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/editBahane"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/editBahane" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvBahane"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="8dp"
            android:maxHeight="256dp"
            app:layout_constraintTop_toBottomOf="@+id/txtBahane" />

        <TextView
            android:id="@+id/txtSelanjutnyae"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selanjutnya..."
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rvBahane" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>